<!DOCTYPE html>
<html>
  <head>
    <title>SecondTreasures</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="nav navbar-inverse justify-content-center">
        <%= link_to 'Home', root_path, class: "nav-link" %>
        <% if user_signed_in? %>
          <%= link_to 'Manage Books', books_path, class: "nav-link" %>
          <%= link_to "Signed in as " + current_user.email, edit_user_registration_path, class: "nav-link" %>
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "nav-link" %>
        <% else %>
          <%= link_to 'Sign In', new_user_session_path, class: "nav-link" %>
        <% end %>
      </nav>
      <%= yield %>
    </div>
    <%= javascript_pack_tag 'application' %>
  </body>
</html>
